widget(container_y, {
  space(1);
  widget(throbber, {
  });

  widget(container_y, {
    weight: 1;
    filterConstraintY: true;

    align: center;

    widget(label, {
      align: center;
      caption: $nav.currentpage.model.loadingStatus;
      outline: true;
      bold: true;
      shadow: true;
    });

    widget(container_x, {
      spacing: 0.5em;
      hidden: !$nav.currentpage.model.io.bitrateValid;

      widget(label, {
        filterConstraintX: true;
        align: right;
        shadow: true;
        outline: true;
        color: 0.6;
        caption: _("Bitrate:");
      });

      widget(label, {
        filterConstraintX: true;
        shadow: true;
        outline: true;
        caption: fmt(_("%d kB/s"), $nav.currentpage.model.io.bitrate);
      });
    });

    cloner($nav.currentpage.model.io.infoNodes, container_x, {
      spacing: 0.5em;

      widget(label, {
        filterConstraintX: true;
        align: right;
        shadow: true;
        outline: true;
        color: 0.6;
        caption: $self.title + ":";
      });

      widget(label, {
        filterConstraintX: true;
        shadow: true;
        outline: true;
        caption: $self.info;
      });
    });
  });
});
