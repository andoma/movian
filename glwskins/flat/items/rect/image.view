#import "skin://theme.view"

widget(container_z, {

  GridItemBevel();
  GridItemHighlight();

  focusable: true;
  onEvent(activate, navOpen("slideshow:" + $self.url, void, $self, $parent.model, void, $parent.url));

  widget(container_y, {
    style: "GridItem";
    padding: 0.25em;

    widget(image, {
      source: $self.url;
    });
  });
});
