
#define VERTICAL_SEPARATOR()
{
  widget(backdrop, {
    .source = "theme://graphics/separator_vertical.png";
    .border = 3;
    .width = 8;
    .alphaSelf = 0.35;
  });
}

#define HORIZONTAL_SEPARATOR(v = false)
{
  widget(backdrop, {
    .hidden = v;
    .source = "theme://graphics/separator_horizontal.png";
    .border = [3, 1];
    .height = 4;
    .alphaSelf = 0.35;
  });
}
